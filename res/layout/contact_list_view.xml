<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:id = "@+id/RelativeLayout1"
    android:layout_width = "fill_parent"
    android:layout_height = "wrap_content"
    android:layout_marginBottom = "10dp"
    android:orientation = "horizontal" >
    
    <ImageView 
        android:id = "@+id/contactThumbnail"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignBottom = "@+id/RelativeLayout2"
        android:layout_alignParentLeft = "true"
        android:layout_marginLeft = "5dp"
        android:contentDescription = "@string/contact_group_tab_name"
        android:src = "@drawable/ic_tab_contacts_groups" />
    
    <RelativeLayout
        android:id = "@+id/RelativeLayout2"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_centerVertical = "true"
        android:layout_toRightOf = "@+id/contactThumbnail"
        android:orientation = "vertical" >
        
        <TextView 
            android:id = "@+id/name_entry"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentRight = "true"
            android:layout_alignParentTop = "true"
            android:textAppearance = "?android:attr/textAppearanceMedium" />
        
        <TextView 
            android:id = "@+id/number_entry"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentRight = "true"
            android:layout_below = "@+id/name_entry"
            android:textAppearance = "?android:attr/textAppearanceMedium" />
    </RelativeLayout>
</RelativeLayout>
    

