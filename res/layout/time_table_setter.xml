<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:id = "@+id/RelativeLayout1"
    android:layout_width = "fill_parent"
    android:layout_height = "fill_parent"
    android:orientation = "vertical" >
    
    <ImageButton 
        android:id = "@+id/bNextDay"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignParentBottom = "true"
        android:layout_alignParentRight = "true"
        android:contentDescription = "@string/policy_tab_name"
        android:src = "@drawable/ic_forward" />
    
    <ImageButton
        android:id = "@+id/bPreviousDay"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignParentBottom = "true"
        android:layout_alignParentLeft = "true"
        android:layout_alignTop = "@+id/bAddTimeStamp"
        android:contentDescription = "@string/policy_tab_name"
        android:src = "@drawable/ic_back" />
    
    <ImageButton
        android:id = "@+id/bAddTimeStamp"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignParentBottom = "true"
        android:layout_alignTop = "@+id/bNextDay"
        android:layout_toLeftOf = "@+id/bNextDay"
        android:layout_toRightOf = "@+id/bPreviousDay"
        android:contentDescription = "@string/policy_tab_name"
        android:src = "@android:drawable/ic_menu_add" />
    
    <ListView 
        android:id = "@+id/lvTimeStamps"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_above = "@+id/bNextDay"
        android:layout_alignParentLeft = "true"
        android:layout_below = "@+id/dayName"
        android:layout_marginTop = "5dp" >        
        
    </ListView>
    
    <TextView 
        android:id = "@+id/dayName"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentTop = "true"
        android:textAppearance = "?android:attr/textAppearanceLarge" />
       
    </RelativeLayout>
